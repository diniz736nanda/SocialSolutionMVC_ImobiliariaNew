@model ClienteModel
@{
    ViewData["Title"] = "Deletar Cliente";
}

<div class="text-center">
    <h3 class="display-4">Deseja realmente deletar esse cliente (@Model.Id) ? </h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Clientes" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Clientes" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
