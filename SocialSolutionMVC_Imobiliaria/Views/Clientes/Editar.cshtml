@model ClienteModel
@{
    ViewData["Title"] = "Editar Clientes";
}

<div class="text-center">

    <h1 class="display-4">Editar cliente</h1>

</div>

<form asp-controller="Clientes" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome completo">
        @Html.ValidationMessageFor(x => x.Nome)

    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x => x.Email)

    </div>

    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text" asp-for="Cpf" class="form-control" placeholder="Digite o CPF">
        @Html.ValidationMessageFor(x => x.Cpf)

    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <input type="text" asp-for="StatusCliente" class="form-control">
        @Html.ValidationMessageFor(x => x.StatusCliente)

    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Clientes" asp-action="Index" role="button">Voltar</a>
</form>
