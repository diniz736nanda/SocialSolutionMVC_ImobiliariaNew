@model ImovelModel
@{
    ViewData["Title"] = "Cadastrar Imoveis";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar imóveis</h1>

</div>

<form asp-controller="Imoveis" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="tipNegocio">Tipo de Negócio</label>
        <input type="text" asp-for="TipoNegocio" class="form-control" placeholder="Digite o Tipo de Negócio">
        @Html.ValidationMessageFor(x => x.TipoNegocio)

    </div>

    <div class="form-group">
        <label for="VlrImovel">Valor Imovel</label>
        <input type="number" asp-for="VlrImovel" class="form-control" placeholder="Digite o valor">
        @Html.ValidationMessageFor(x => x.VlrImovel)
    </div>

    <div class="form-group">
        <label for="Desc">Descrição</label>
        <input type="text" asp-for="Desc" class="form-control" placeholder="Informe a descrição">
        @Html.ValidationMessageFor(x => x.Desc)
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <input type="text" asp-for="StatusImovel" class="form-control">
        @Html.ValidationMessageFor(x => x.StatusImovel)
    </div>

    <div class="form-group">
        <label for="cliente">Cliente</label>
        <input type="text" asp-for="Cliente" class="form-control">
        @Html.ValidationMessageFor(x => x.StatusImovel)
    </div>


    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Imoveis" asp-action="Index" role="button">Voltar</a>
</form>
